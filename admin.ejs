<!DOCTYPE html>
<html>
<head>
  <title>Admin Page</title>
  <link rel="stylesheet" href="styleadminpage.css" />
  <style>
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
    }
    .table-container {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>Projects</h1>
    <button onclick="location.href='/logout'">Logout</button>
    <button onclick="location.href='/index.html'">Calculate</button>
  </div>

  <div class="table-container">
    <table>
      <tr>
        <th>Date</th>
        <th>Project Number</th>
        <th>Company Name</th>
        <th>Project Name</th>
        <th>Tunnel Name</th>
        <th>Link</th>
      </tr>
      <% for(let i=0; i<projects.length; i++) { %>
        <% if (projects[i].calculations && projects[i].calculations.projectName) { %>
          <tr>
            <td><%= projects[i].calculations.projectDate %></td>
            <td><%= projects[i].calculations.projectNumber %></td>
            <td><%= projects[i].calculations.companyName %></td>
            <td><%= projects[i].calculations.projectName %></td>
            <td><%= projects[i].calculations.tunnelName %></td>
            <td><a href="/download-pdf/<%= projects[i]._id %>" target="_blank">Download PDF</a></td>
          </tr>
        <% } %>
      <% } %>
    </table>
  </div>
</body>
</html>
